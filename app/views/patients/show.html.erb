<h1>Details for <%= @patient.name %></h1>
<h2>Appointments:</h2>
<table>
  <thead>
    <tr>
      <th>Doctor Name</th>
      <th>Date and Time</th>
    </tr>
  </thead>
  <tbody>
    <% @patient.appointments.each do |appt| %>
      <tr>
        <td><%= link_to appt.doctor.name, doctor_path(appt.doctor) %></td>
        <td><%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %H:%M"), appointment_path(appt) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
