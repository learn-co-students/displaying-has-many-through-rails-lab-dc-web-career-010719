<h1>Appointment Details</h1>
<ul>
  <li>Doctor: <%= link_to @appointment.doctor.name, doctor_path(@appointment.doctor) %></li>
  <li>Patient: <%= link_to @appointment.patient.name, patient_path(@appointment.patient) %></li>
  <li>Date: <%= @appointment.appointment_datetime.strftime("%B %d, %Y") %></li>
  <li>Time: <%= @appointment.appointment_datetime.strftime("%H:%M") %></li>
</ul>
