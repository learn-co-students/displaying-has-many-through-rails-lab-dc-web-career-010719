<h1><%= @doctor.name %></h1>


<h4>Department: <%= @doctor.department %></h4>

<h4>Appointments: </h4>
<ul>
  <% @doctor.appointments.each do |appt| %>
    <li><%= link_to appt.patient.name, appt.patient %>, <%= appt.appointment_datetime.strftime('%B %e, %Y') %> at <%= appt.appointment_datetime.strftime("%H:%M:%S") %></li>
  <% end %>
</ul>
