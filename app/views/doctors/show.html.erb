<h1>Details for Dr. <%= @doctor.name %></h1>
<h2>Department: <%= @doctor.department %></h2>
<h2>Appointments:</h2>
<table>
  <thead>
    <tr>
      <th>Patient Name</th>
      <th>Date and Time</th>
    </tr>
  </thead>
  <tbody>
    <% @doctor.appointments.each do |appt| %>
      <tr>
        <td><%= link_to appt.patient.name, patient_path(appt.patient) %></td>
        <td><%= link_to appt.appointment_datetime.strftime("%B %d, %Y at %H:%M"), appointment_path(appt) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
